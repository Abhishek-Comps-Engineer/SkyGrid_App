<!-- res/drawable/grid_tile.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the size of one grid square. Smaller size = denser grid. -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- The horizontal line (at the bottom of the tile) -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <!-- Use a semi-transparent color for a subtle effect -->
            <solid android:color="#33FFFFFF" />
        </shape>
    </item>

    <!-- The vertical line (at the right of the tile) -->
    <item android:gravity="right">
        <shape android:shape="rectangle">
            <size android:width="1dp" />
            <!-- Use the same semi-transparent color -->
            <solid android:color="#33FFFFFF" />
        </shape>
    </item>

</layer-list>