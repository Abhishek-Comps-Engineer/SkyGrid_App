<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue_light"
    tools:context=".fragments.RoadSurveyFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_button_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Road Condition Survey"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Image Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_container_card"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/header_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Original Road Image -->
                    <ImageView
                        android:id="@+id/image_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        tools:srcCompat="@tools:sample/backgrounds/scenic[2]" />

                    <!-- Damage Map Overlay (Red Markings) -->
                    <ImageView
                        android:id="@+id/damage_map_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic[3]"
                        android:visibility="visible"/>

                    <!-- Initial Upload Placeholder -->
                    <LinearLayout
                        android:id="@+id/placeholder_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/sky_blue_medium">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/ic_road_survey_upload"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Upload Road Image"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Loading Overlay -->
                    <FrameLayout
                        android:id="@+id/progress_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#B0FFFFFF"
                        android:visibility="gone">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Image Toggle Group -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_button_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                app:checkedButton="@id/btn_toggle_damage_map"
                app:layout_constraintTop_toBottomOf="@id/image_container_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:visibility="visible">

                <Button
                    android:id="@+id/btn_toggle_damage_map"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Damage Map"/>

                <Button
                    android:id="@+id/btn_toggle_original"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original Image"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Results Dashboard Section -->
            <LinearLayout
                android:id="@+id/results_dashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/toggle_button_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Infrastructure Report Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Infrastructure Report"
                            android:textColor="@color/text_color_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/road_condition_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dangerous"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@drawable/rounded_corner_bg"
                            android:backgroundTint="@color/red_danger"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="24dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Detected Issues Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detected Issues"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <!-- Potholes -->
                        <include layout="@layout/list_item_road_issue" android:id="@+id/issue_potholes"/>

                        <!-- Cracks -->
                        <include layout="@layout/list_item_road_issue" android:id="@+id/issue_cracks"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Fixed Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/sky_blue_light"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_change_image"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:text="Change Image"
            android:textColor="@color/colorPrimary"
            app:strokeColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_analyze_road"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:text="Analyze Road"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>