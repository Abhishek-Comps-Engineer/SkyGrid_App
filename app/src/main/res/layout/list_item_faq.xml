<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <!-- Question Header (Clickable part) -->
    <RelativeLayout
        android:id="@+id/faq_question_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/faq_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/faq_expand_icon"
            android:layout_marginEnd="8dp"
            android:textColor="@color/text_color_primary"
            android:textSize="16sp"
            tools:text="How do I upload an image for analysis?"/>

        <ImageView
            android:id="@+id/faq_expand_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_expand_more"
            app:tint="@color/colorPrimary" />
    </RelativeLayout>

    <!-- Answer Text (Hidden by default) -->
    <TextView
        android:id="@+id/faq_answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:textColor="@color/text_color_secondary"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="On any analysis screen (like Object Detection or Crop Analysis), tap the prominent 'Upload Image' button or the placeholder area to select an image from your device's gallery."/>

</LinearLayout>