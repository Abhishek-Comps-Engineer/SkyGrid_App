<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue_light"
    android:fillViewport="true"
    tools:context=".fragments.CropAnalysisFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Crop Health Analysis"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Image and Heatmap Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_container_card"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/header_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- This view shows the satellite image -->
                <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:srcCompat="@tools:sample/backgrounds/scenic[1]"
                    tools:visibility="visible"/>

                <!-- This view shows the generated NDVI Heatmap -->
                <ImageView
                    android:id="@+id/heatmap_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:srcCompat="@tools:sample/backgrounds/scenic[2]"/>

                <!-- Initial Placeholder for Uploading -->
                <LinearLayout
                    android:id="@+id/placeholder_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/sky_blue_medium">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_upload_leaf"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Upload Crop Image"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Loading Overlay -->
                <FrameLayout
                    android:id="@+id/progress_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B0FFFFFF"
                    android:visibility="gone">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </FrameLayout>

            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Toggle between Original Image and NDVI Heatmap -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:singleSelection="true"
            app:checkedButton="@id/btn_toggle_ndvi"
            app:layout_constraintTop_toBottomOf="@id/image_container_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/btn_toggle_ndvi"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NDVI Heatmap"/>

            <Button
                android:id="@+id/btn_toggle_original"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original Image"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Results Dashboard Section -->
        <LinearLayout
            android:id="@+id/results_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/toggle_button_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Card for the Pie Chart -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Distribution"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

<!--                    <com.github.mikephil.charting.charts.PieChart-->
<!--                        android:id="@+id/pie_chart"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="180dp"-->
<!--                        android:layout_marginTop="16dp"/>-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card for detailed statistics -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Statistics"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <!-- Healthy Stat -->
                    <include layout="@layout/list_item_stat" android:id="@+id/stat_healthy"/>

                    <!-- Stressed Stat -->
                    <include layout="@layout/list_item_stat" android:id="@+id/stat_stressed"/>

                    <!-- Unhealthy Stat -->
                    <include layout="@layout/list_item_stat" android:id="@+id/stat_unhealthy"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <!-- Action Buttons -->
        <Button
            android:id="@+id/btn_upload"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="Change Image"
            android:textColor="@color/colorPrimary"
            app:strokeColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_analyze"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/btn_analyze"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Analyze Health"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_upload"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>